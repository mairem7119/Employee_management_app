@model IEnumerable<EmployeeManagement.Core.Entities.Department>

@{
  ViewData["Title"] = "Danh sách phòng ban";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Danh sách phòng ban</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm phòng ban mới
        </a>
    </div>

    <!-- Form Tìm kiếm -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> Tìm kiếm
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <label for="searchTerm" class="form-label">Tìm kiếm theo tên hoặc mã phòng ban</label>
                    <input type="text"
                           class="form-control"
                           id="searchTerm"
                           name="searchTerm"
                           value="@ViewBag.SearchTerm"
                           placeholder="Nhập tên hoặc mã phòng ban...">
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <div class="w-100">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
            </form>
            @if (!string.IsNullOrWhiteSpace(ViewBag.SearchTerm))
            {
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-x-circle"></i> Xóa bộ lọc
                    </a>
                </div>
            }
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mã Phòng ban</th>
                        <th>Tên Phòng ban</th>
                        <th>Mô tả</th>
                        <th>Trạng thái</th>
                        <th>Ngày tạo</th>
                        <th>Ngày cập nhật</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var department in Model)
                    {
                        <tr>
                            <td>@department.Code</td>
                            <td>@department.Name</td>
                            <td>@department.Description</td>
                            <td>@department.IsActive</td>
                            <td>@department.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
                            <td>@department.UpdatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@department.Id" class="btn btn-sm btn-info">Chi tiết</a>
                                    <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-sm btn-warning">Sửa</a>
                                    <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-sm btn-danger">Xóa</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            @if (!string.IsNullOrWhiteSpace(ViewBag.SearchTerm))
            {
                <text>Không tìm thấy phòng ban nào phù hợp với từ khóa "<strong>@ViewBag.SearchTerm</strong>". </text>
                <a asp-action="Index">Xem tất cả phòng ban</a>
            }
            else
            {
                <text>Chưa có phòng ban nào. </text>
                <a asp-action="Create">Thêm phòng ban đầu tiên</a>
            }
        </div>
    }  
</div>