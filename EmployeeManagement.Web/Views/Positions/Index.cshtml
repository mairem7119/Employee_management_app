@model IEnumerable<EmployeeManagement.Core.Entities.Position>

@{
  ViewData["Title"] = "Danh sách chức vụ";
  var sortBy = ViewBag.SortBy as string ?? "Name";
  var sortOrder = ViewBag.SortOrder as string ?? "asc";
  string NextSortOrder(string column) => sortBy == column && sortOrder == "asc" ? "desc" : "asc";
  string SortIcon(string column)
  {
    if (sortBy != column) return "";
    return sortOrder == "asc" ? " ↑" : " ↓";
  }
}

<div class="container mt-4">
  @if (TempData["SuccessMessage"] != null)
  {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      @TempData["SuccessMessage"]
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  }
  @if (TempData["ErrorMessage"] != null)
  {
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      @TempData["ErrorMessage"]
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  }

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Danh sách chức vụ</h2>
    <a asp-action="Create" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Thêm chức vụ mới
    </a>
  </div>

  @if (Model != null && Model.Any())
  {
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>
              <a asp-action="Index" asp-route-sortBy="Id" asp-route-sortOrder="@NextSortOrder("Id")" class="text-white text-decoration-none">
                Mã chức vụ@(SortIcon("Id"))
              </a>
            </th>
            <th>
              <a asp-action="Index" asp-route-sortBy="Name" asp-route-sortOrder="@NextSortOrder("Name")" class="text-white text-decoration-none">
                Tên chức vụ@(SortIcon("Name"))
              </a>
            </th>
            <th>Mô tả</th>
            <th>
              <a asp-action="Index" asp-route-sortBy="CreatedAt" asp-route-sortOrder="@NextSortOrder("CreatedAt")" class="text-white text-decoration-none">
                Ngày tạo@(SortIcon("CreatedAt"))
              </a>
            </th>
            <th>
              <a asp-action="Index" asp-route-sortBy="UpdatedAt" asp-route-sortOrder="@NextSortOrder("UpdatedAt")" class="text-white text-decoration-none">
                Ngày cập nhật@(SortIcon("UpdatedAt"))
              </a>
            </th>
            <th>Hành động</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var position in Model)
          {
            <tr>
              <td>@position.Id</td>
              <td>@position.Name</td>
              <td>@(string.IsNullOrEmpty(position.Description) ? "N/A" : position.Description)</td>
              <td>@position.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
              <td>@position.UpdatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
              <td>
                <div class="btn-group" role="group">
                  <a asp-action="Details" asp-route-id="@position.Id" class="btn btn-sm btn-info">Chi tiết</a>
                  <a asp-action="Edit" asp-route-id="@position.Id" class="btn btn-sm btn-warning">Sửa</a>
                  <a asp-action="Delete" asp-route-id="@position.Id" class="btn btn-sm btn-danger">Xóa</a>
                </div>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  }
  else
  {
    <div class="alert alert-info" role="alert">
      Chưa có chức vụ nào. <a asp-action="Create">Thêm chức vụ đầu tiên</a>
    </div>
  }
</div>