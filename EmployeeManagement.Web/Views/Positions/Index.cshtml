@model IEnumerable<EmployeeManagement.Core.Entities.Position>

@{
  ViewData["Title"] = "Danh sách chức vụ";
}

<div class="container mt-4">
  @if (TempData["SuccessMessage"] != null)
  {
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      @TempData["SuccessMessage"]
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  }
  @if (TempData["ErrorMessage"] != null)
  {
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
      @TempData["ErrorMessage"]
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  }

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Danh sách chức vụ</h2>
    <a asp-action="Create" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Thêm chức vụ mới
    </a>
  </div>

  @if (Model != null && Model.Any())
  {
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Mã chức vụ</th>
            <th>Tên chức vụ</th>
            <th>Mô tả</th>
            <th>Ngày tạo</th>
            <th>Ngày cập nhật</th>
            <th>Hành động</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var position in Model)
          {
            <tr>
              <td>@position.Id</td>
              <td>@position.Name</td>
              <td>@(string.IsNullOrEmpty(position.Description) ? "N/A" : position.Description)</td>
              <td>@position.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
              <td>@position.UpdatedAt.ToLocalTime().ToString("dd/MM/yyyy")</td>
              <td>
                <div class="btn-group" role="group">
                  <a asp-action="Details" asp-route-id="@position.Id" class="btn btn-sm btn-info">Chi tiết</a>
                  <a asp-action="Edit" asp-route-id="@position.Id" class="btn btn-sm btn-warning">Sửa</a>
                  <a asp-action="Delete" asp-route-id="@position.Id" class="btn btn-sm btn-danger">Xóa</a>
                </div>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  }
  else
  {
    <div class="alert alert-info" role="alert">
      Chưa có chức vụ nào. <a asp-action="Create">Thêm chức vụ đầu tiên</a>
    </div>
  }
</div>