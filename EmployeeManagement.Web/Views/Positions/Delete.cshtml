@model EmployeeManagement.Core.Entities.Position

@{
    ViewData["Title"] = "Xóa chức vụ";
}

<div class="container mt-4">
    <h2 class="text-danger">Xóa chức vụ</h2>
    <hr />
    
    <h4>Bạn có chắc chắn muốn xóa chức vụ này?</h4>

    <dl class="row mt-4">
        <dt class="col-sm-3">ID:</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">Tên chức vụ:</dt>
        <dd class="col-sm-9"><strong>@Model.Name</strong></dd>

        <dt class="col-sm-3">Mô tả:</dt>
        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.Description) ? "N/A" : Model.Description)</dd>

        <dt class="col-sm-3">Ngày tạo:</dt>
        <dd class="col-sm-9">@Model.CreatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</dd>

        <dt class="col-sm-3">Ngày cập nhật:</dt>
        <dd class="col-sm-9">@Model.UpdatedAt.ToLocalTime().ToString("dd/MM/yyyy HH:mm")</dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>
