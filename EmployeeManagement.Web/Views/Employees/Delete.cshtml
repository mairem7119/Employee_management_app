@model EmployeeManagement.Core.Entities.Employee

@{
    ViewData["Title"] = "Xóa nhân viên";
}

<div class="container mt-4">
    <h2 class="text-danger">Xóa nhân viên</h2>
    <hr />
    <h4>Bạn có chắc chắn muốn xóa nhân viên này?</h4>

    <dl class="row mt-4">
        <dt class="col-sm-3">ID:</dt>
        <dd class="col-sm-9">@Model.Id</dd>

        <dt class="col-sm-3">Họ và tên:</dt>
        <dd class="col-sm-9"><strong>@Model.FirstName @Model.LastName</strong></dd>

        <dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Phòng ban:</dt>
        <dd class="col-sm-9">@(Model.Department?.Name ?? "N/A")</dd>

        <dt class="col-sm-3">Chức vụ:</dt>
        <dd class="col-sm-9">@Model.Position</dd>
    </dl>

    <form asp-action="Delete" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </form>
</div>