@model EmployeeManagement.Web.Models.EditEmployeeViewModel

@{
    ViewData["Title"] = "Sửa thông tin nhân viên";
}

<div class="container mt-4">
    <h2>Sửa thông tin nhân viên</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Employee.Id" />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Employee.FirstName" class="form-label">Họ</label>
                        <input asp-for="Employee.FirstName" class="form-control" />
                        <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Employee.LastName" class="form-label">Tên</label>
                        <input asp-for="Employee.LastName" class="form-control" />
                        <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Employee.Email" class="form-label">Email</label>
                    <input asp-for="Employee.Email" type="email" class="form-control" />
                    <span asp-validation-for="Employee.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Employee.PhoneNumber" class="form-label">Số điện thoại</label>
                    <input asp-for="Employee.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Employee.DepartmentId" class="form-label">Phòng ban <span class="text-danger">*</span></label>
                        <select asp-for="Employee.DepartmentId" class="form-select" required>
                            <option value="">-- Chọn phòng ban --</option>
                            @if (Model.Departments != null)
                            {
                                @foreach (var dept in Model.Departments)
                                {
                                    <option value="@dept.Id">@dept.Name</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Employee.Position" class="form-label">Chức vụ <span class="text-danger">*</span></label>
                        <select asp-for="Employee.Position" class="form-select" required>     
                            <option value="">-- Chọn chức vụ --</option>
                            @if (Model.Positions != null)
                            {
                                @foreach (var position in Model.Positions)
                                {
                                    <option value="@position.Name">@position.Name</option>
                                }
                            }
                       </select>
                       <span asp-validation-for="Employee.Position" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Employee.Salary" class="form-label">Lương</label>
                        <input asp-for="Employee.Salary" type="number" step="1000" min="0" class="form-control" />
                        <span asp-validation-for="Employee.Salary" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Employee.HireDate" class="form-label">Ngày vào làm</label>
                        <input asp-for="Employee.HireDate" type="date" 
                            value="@(Model.Employee.HireDate != default(DateTime) ? Model.Employee.HireDate.ToLocalTime().ToString("yyyy-MM-dd") : "")" 
                            class="form-control" />
                        <span asp-validation-for="Employee.HireDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}