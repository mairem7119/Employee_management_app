@model IEnumerable<EmployeeManagement.Core.Entities.Employee>

@{
  ViewData["Title"] = "Employee List";
}

<div class="container mt-4">
  <div class="">
    <h2>Danh sách nhân viên</h2>
    <a asp-action="Create" class="btn btn-primary">
      <i class="bi bi-plus-circle"></i> Thêm nhân viên mới
    </a>
  </div>

  @if(Model != null && Model.Any())
  {
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead class="table-dark">
          <tr>
            <th>Mã nhân viên</th>
            <th>Họ và tên</th>
            <th>Email</th>
            <th>Số điện thoại</th>
            <th>Phòng ban</th>
            <th>Chức vụ</th>
            <th>Lương</th>
            <th>Ngày vào làm</th>
            <th>Hành động</th>
          </tr>
        </thead>
        <tbody>
          @foreach(var employee in Model)
          {
            <tr>
              <td>@employee.Id</td>
              <td>@employee.FirstName @employee.LastName</td>
              <td>@employee.Email</td>
              <td>@employee.PhoneNumber</td>
              <td>@employee.Department</td>
              <td>@employee.Position</td>
              <td>@employee.Salary.ToString("N0") VNĐ</td>
              <td>@employee.HireDate.ToString("dd/MM/yyyy")</td>
              <td>
                <div class="btn-group" role="group">
                  <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-info">
                    <i class="bi bi-eye"></i> Xem
                  </a>
                  <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Sửa
                  </a>
                  <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Xóa
                  </a>
                </div>
              </td>
            </tr>
          }
        </tbody>
      </table>
    </div>
  }
  else
  {
    <div class="alert alert-info" role="alert">
      Chưa có nhân viên nào. <a asp-action="Create">Thêm nhân viên đầu tiên</a>
    </div>
  }
</div>
