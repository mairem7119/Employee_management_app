@model IEnumerable<EmployeeManagement.Core.Entities.Employee>

@{
    ViewData["Title"] = "Danh sách nhân viên";
}

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Danh sách nhân viên</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Thêm nhân viên mới
        </a>
    </div>

    <!-- Form Tìm kiếm và Lọc -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">
                <i class="bi bi-funnel"></i> Tìm kiếm và Lọc
            </h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-4">
                    <label for="searchTerm" class="form-label">Tìm kiếm</label>
                    <input type="text" 
                           class="form-control" 
                           id="searchTerm" 
                           name="searchTerm" 
                           value="@ViewBag.SearchTerm" 
                           placeholder="Tên, email, số điện thoại...">
                </div>
                <div class="col-md-3">
                    <label for="departmentId" class="form-label">Phòng ban</label>
                    <select class="form-select" id="departmentId" name="departmentId">
                        <option value="">-- Tất cả phòng ban --</option>
                        @if (ViewBag.Departments != null)
                        {
                            @foreach (var dept in ViewBag.Departments)
                            {
                                var isSelected = ViewBag.SelectedDepartmentId != null && ViewBag.SelectedDepartmentId.ToString() == dept.Id.ToString();
                                <option value="@dept.Id" selected="@(isSelected ? "selected" : null)">
                                    @dept.Name
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label for="position" class="form-label">Chức vụ</label>
                    <select class="form-select" id="position" name="position">
                        <option value="">-- Tất cả chức vụ --</option>
                        @if (ViewBag.Positions != null)
                        {
                            @foreach (var pos in ViewBag.Positions)
                            {
                                var isSelected = ViewBag.SelectedPosition != null && ViewBag.SelectedPosition == pos.Name;
                                <option value="@pos.Name" selected="@(isSelected ? "selected" : null)">
                                    @pos.Name
                                </option>
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <div class="w-100">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-search"></i> Tìm kiếm
                        </button>
                    </div>
                </div>
            </form>
            @if (!string.IsNullOrWhiteSpace(ViewBag.SearchTerm) || 
                 (ViewBag.SelectedDepartmentId != null) || 
                 !string.IsNullOrWhiteSpace(ViewBag.SelectedPosition))
            {
                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                        <i class="bi bi-x-circle"></i> Xóa bộ lọc
                    </a>
                </div>
            }
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Mã nhân viên</th>
                        <th>Họ và tên</th>
                        <th>Email</th>
                        <th>Số điện thoại</th>
                        <th>Phòng ban</th>
                        <th>Chức vụ</th>
                        <th>Lương</th>
                        <th>Ngày vào làm</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@employee.Id</td>
                            <td>@employee.FirstName @employee.LastName</td>
                            <td>@employee.Email</td>
                            <td>@employee.PhoneNumber</td>
                            <td>@(employee.Department != null ? employee.Department.Name : "N/A")</td>
                            <td>@(string.IsNullOrEmpty(employee.Position) ? "N/A" : employee.Position)</td>
                            <td>@employee.Salary.ToString("N0") VNĐ</td>
                            <td>@employee.HireDate.ToLocalTime().ToString("dd/MM/yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@employee.Id" class="btn btn-sm btn-info">Chi tiết</a>
                                    <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-sm btn-warning">Sửa</a>
                                    <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-sm btn-danger">Xóa</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            @if (!string.IsNullOrWhiteSpace(ViewBag.SearchTerm) || 
                 (ViewBag.SelectedDepartmentId != null) || 
                 !string.IsNullOrWhiteSpace(ViewBag.SelectedPosition))
            {
                <text>Không tìm thấy nhân viên nào phù hợp với tiêu chí tìm kiếm. <a asp-action="Index">Xem tất cả nhân viên</a></text>
            }
            else
            {
                <text>Chưa có nhân viên nào. <a asp-action="Create">Thêm nhân viên đầu tiên</a></text>
            }
        </div>
    }
</div>