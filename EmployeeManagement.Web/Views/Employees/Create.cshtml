@model EmployeeManagement.Web.Models.CreateEmployeeViewModel

@{
    ViewData["Title"] = "Thêm nhân viên mới";
}

<div class="container mt-4">
    <h2>Thêm nhân viên mới</h2>
    <hr />

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            <h5>Có lỗi xảy ra:</h5>
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Employee.FirstName" class="form-label">Họ <span class="text-danger">*</span></label>
                        <input asp-for="Employee.FirstName" class="form-control" required /> 
                        <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Employee.LastName" class="form-label">Tên <span class="text-danger">*</span></label>
                        <input asp-for="Employee.LastName" class="form-control" required />
                        <span asp-validation-for="Employee.LastName" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Employee.Email" class="form-label">Email <span class="text-danger">*</span></label>
                    <input asp-for="Employee.Email" type="email" class="form-control" required />
                    <span asp-validation-for="Employee.Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Employee.PhoneNumber" class="form-label">Số điện thoại <span class="text-danger">*</span></label>
                    <input asp-for="Employee.PhoneNumber" class="form-control" required />
                    <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                       <label asp-for="Employee.DepartmentId" class="form-label">Phòng ban <span class="text-danger">*</span></label>
                        <select asp-for="Employee.DepartmentId" class="form-select" required>
                            <option value="">-- Chọn phòng ban --</option>
                            @foreach (var dept in Model.Departments)
                            {
                                <option value="@dept.Id">@dept.Name</option>
                            }
                        </select>
                        <span asp-validation-for="Employee.DepartmentId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Employee.Position" class="form-label">Chức vụ <span class="text-danger">*</span></label>
                        <select asp-for="Employee.Position" class="form-select" required>     
                            <option value="">-- Chọn chức vụ --</option>
                            @foreach (var position in Model.Positions)
                            {
                                <option value="@position.Name">@position.Name</option>
                            }
                       </select>
                       <span asp-validation-for="Employee.Position" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Employee.Salary" class="form-label">Lương <span class="text-danger">*</span></label>
                        <input asp-for="Employee.Salary" type="number" step="1000" min="0" class="form-control" required />
                        <span asp-validation-for="Employee.Salary" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Employee.HireDate" class="form-label">Ngày vào làm <span class="text-danger">*</span></label>
                        <input asp-for="Employee.HireDate" type="date" class="form-control" required />
                        <span asp-validation-for="Employee.HireDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}